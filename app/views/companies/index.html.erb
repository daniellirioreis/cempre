<table class="table table-striped table-hover table-bordered">
  <colgroup>
    <col>
    <col width="160">
  </colgroup>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ação</th>
    </tr>
  </thead>
  <tbody>
    <% if @companies.any? %>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company %></td>
          <td align='center'>
            <div class="btn-group">
              <%= link_to "Editar", edit_company_path(company), :class => "btn btn-primary", :title => "Editar #{company}" %>
              <%= link_to 'Deletar', company, method: :delete, data: { confirm: 'Confirma exclusão?'}, :class => "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
    <tr>
      <td colspan='2'>Nenhum registro foi encontrado.</td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="form-actions">
  <%= link_to 'Nova Escola', new_company_path, :class => "btn" %>
</div>