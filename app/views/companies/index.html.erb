<blockquote>
  <table class='table'>
    <tr>
      <td>
        <%= link_to new_company_path, role: 'button' do %>
          <h2 class="text-success" title='Nova Escola'><i class="icon-plus"></i></h2>
        <% end %>
      </td>
	 </tr>
	</table>
</blockquote>

<%= label_tag 'txtBusca', 'Pesquisar' %>
<%= text_field_tag 'txtBusca', '', :class => 'span11 input-search', :id => 'txtBusca',:placeholder => "Buscar nesta lista", :alt =>"list_companies" %>

<table class="list_companies table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        <% if @companies.any? %>
          <% @companies.each do |s| %>
            <tr>
                <td align="center">
                  <%= s %>
                </td>
                <td>
									<div class="btn-group">
									  <%= link_to "Editar", edit_company_path(s), :class => "btn btn-primary", :title => "Editar #{s}" %>
									  <%= link_to "Informação", s, :class => "btn btn-info"%>
									  <%= link_to "Alunos por bairro", students_for_neighborhood_company_path(s), :class => "btn btn-info"%>									
									  <%= link_to "Alunos por nível", students_for_level_company_path(s), :class => "btn btn-info"%>																		
									  <%= link_to "Lista de chamadas", lists_present_company_path(s), :class => "btn btn-info"%>																		
									  <%= link_to 'Deletar', s, method: :delete, data: { confirm: 'Confirma exclusão?'}, :class => "btn btn-danger" %>
									</div>
                </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan='2'>Nenhum registro foi encontrado.</td>
          </tr>
        <% end %>
    </tbody>
</table>





