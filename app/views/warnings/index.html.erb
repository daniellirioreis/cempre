<h1>Listing warnings</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @warnings.each do |warning| %>
      <tr>
        <td><%= warning.student %></td>
        <td><%= warning.description %></td>
        <td><%= link_to 'Show', warning %></td>
        <td><%= link_to 'Edit', edit_warning_path(warning) %></td>
        <td><%= link_to 'Destroy', warning, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

