<%= simple_form_for(@warning) do |f| %>
	<%= hidden_field_tag :student_id, params[:student_id] %>
	<%= f.input :student_id, :as => "hidden"%>
  <blockquote>
	  <strong>Nome: </strong><%=@student%><br>
	  <strong>Data Nascimento: </strong><%= l @student.birth_date unless @student.birth_date.nil?  %><br>
	  <strong>Idade: </strong><%= @student.age[:ano] %> ano(s) <%= @student.age[:mes]%> mÃªs(es) <%= @student.age[:dia]%> dia(s)
	</blockquote>

	<div class="row-fluid">
	   <div class="span3"><%= f.input :calendar_day_id, collection: current_calendar.days.map{|cd|[cd.to_string, cd.id]} %></div>
	</div>	
	
	<div class="row-fluid">
	    <%= f.input :description, input_html: { rows: '10', cols: '100' } %>
	</div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to  'Voltar', @student, class: 'btn' %>
  </div>
<% end %>
