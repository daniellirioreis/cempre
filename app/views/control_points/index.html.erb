	<%= label_tag 'txtBusca', 'Pesquisar' %>
	<%= text_field_tag 'txtBusca', '', :class => 'span11 input-search', :id => 'txtBusca',:placeholder => "Buscar nesta lista", :alt =>"list_teachers" %>

	<table class="list_teacher table table-striped table-hover table-bordered">
	    <thead>
	        <tr>
	            <th>Nome</th>
	            <th> Ação </th>
	        </tr>
	    </thead>
	    <tbody>
	      <% if @teachers.any? %>
	        <% @teachers.sorted.each do |t| %>
	          <tr>
	              <td><%= t %></td>
	              <td>
									<% unless current_user.adm %>
										<%= link_to "Entrada/Saída", new_control_point_path(teacher_id: t.id ), :class => "btn btn-success", :title => "Editar #{t}" %>
									<% end %>
									<%= link_to "Controle de ponto", info_control_points_path(teacher_id: t.id ), :class => "btn btn-info" %>									
									 </td>
	          </tr>
	        <% end %>
	      <% else %>
	        <tr>
	          <td colspan='9'>Nenhum registro foi encontrado.</td>
	        </tr>
	      <% end %>
	    </tbody>
	</table>




	