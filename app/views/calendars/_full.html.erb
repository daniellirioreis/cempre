<table class="table table-striped table-hover table-bordered">
  <tr>
    <% @all_days.group_by(&:month_string).each do |month_string, days|%>
      <td>
        <%= month_string %><br>
        <% days.each do |d|%>
          <a href="#<%=d.id%>myModalEvent" role="link" class="link" data-toggle="modal"><%= d.day.day %></a>
          <div id="<%=d.id%>myModalEvent" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
              <h3><%=d.to_string %></h3>
            </div>
            <div class="modal-body">
              <p>
                <b>Eventos</b><br>
                <% d.events.each do |e| %>
                  <%= e %><br>
                <% end %>
                <hr/>
                <b>Aulas Cronograma</b><br>
                <% d.schedules.each do |e| %>
                  <%= e.description %><br>
                <% end %>
              </p>
            </div>
          </div>
        <%end%>
      </td>
    <% end %>
  </tr>
</table>