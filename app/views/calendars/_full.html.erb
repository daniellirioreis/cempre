<a id='open' href="#">Calendário</a>
<a id='close' href="#">x</a>
<table class="table table-striped table-hover table-bordered" id='information'>
 <tr>
   <% @all_days.group_by(&:month_string).each do |month_string, days|%>
     <td>
       <%= month_string %><br>
       <% days.each do |d|%>
         <a href="#<%=d.id%>myModalEvent" role="link" class="link" data-toggle="modal" title="<%= d.weekday_less%>">
            <b><%= d.day.day %></b></a>
         <div id="<%=d.id%>myModalEvent" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
           <div class="modal-header">
             <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
             <h3><%=d.to_string %></h3>
           </div>
           <div class="modal-body">
             <p>
               <b>Eventos</b><br>
               <% d.events.each do |e| %>
                 <%= e %><br>
               <% end %>
               <hr/>
               <b>Aulas Cronograma</b><br>
               <% d.schedules.each do |e| %>
                 <%= e.description %><br>
               <% end %>
               <b>Aulas do Dia</b><br>
               <% d.lessons.each do |l| %>
                 <%= "#{l.time_start.try(:strftime, '%H:%M')} às #{l.time_end.try(:strftime, '%H:%M')}- #{l.classroom}"%><br>
               <% end %>
             </p>
           </div>
         </div>
       <%end%>
     </td>
   <% end %>
 </tr>
</table>
