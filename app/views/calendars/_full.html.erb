  <% contador = 0 %>
  <table id='information'class="table table-striped table-hover table-bordered">
      <% @calendar.days.sort_by(&:day).each do |l| %>
        <% if contador == 0 %>
          <tr>
          <%end%>
          <%  contador = contador + 1 %>
          <td>
            <div class="alert <% if l.day < Date.today %>alert-success<%else%> alert-info <%end%>">
              <p class='text-info'><strong><%= l.to_string %></strong></p><br>
              <% l.schedules.each do |s| %>
                <%= s.description %> - <%= s.plan %>
                <hr>
              <%end%>
              <% l.events.each do |e| %>
                <%= e.description %>

                <hr>
              <%end%>

            </div>
          </td>

          <% if contador == 4 %>
            <%contador = 0%>
          </tr>
        <%end%>
      <% end %>
    </table>