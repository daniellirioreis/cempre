<%= simple_form_for(@calendar) do |f| %>
  <div class="row-fluid">
    <div class="span6"><%= f.input :name, input_html: { class: 'span6' } %></div>
  </div>
  <div class="row-fluid">
    <div class="span4"><%= f.input :date_start, input_html: { class: 'span4' } %></div>
    <div class="span4"><%= f.input :date_end, input_html: { class: 'span4' } %></div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Voltar', :back, class: 'btn' %>
  </div>

<%end%>