<%= label_tag 'txtBusca', 'Pesquisar' %>
<%= text_field_tag 'txtBusca', '', :class => 'span11', :id => 'txtBusca' %>

<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"> <%= link_to "Turmas Abertas", "#classrooms_active", :"data-toggle" => :tab %></li>
    <li> <%= link_to "Turmas Fechadas", "#classrooms_closed", :"data-toggle" => :tab %></li>
  </ul>
</div>
<div class="tab-content">
  <div class="tab-pane fade active in" id="classrooms_active">
    <div id='div_color'>
      <table id="ulItens" class="table table-striped table-hover table-bordered">
        <colgroup>
          <col>
          <col width="160">
        </colgroup>
        <thead>
          <tr>
            <th>Selecione a turma para ver mais detalhes</th>
          </tr>
        </thead>
        <tbody>
          <% if @classrooms.any? %>
            <% @classrooms.sort_by(&:name).each do |classroom| %>
              <tr>
                <td>
                  <div class="alert alert-info">
                   <h4> <%=  link_to "#{classroom}", classroom, title: 'Ver detalhes' %></h4><br>
                    <table class="table table-striped table-hover table-bordered">
                      <tr>
                        <td colspan='3'>
                          <b>Professor: </b> <%= classroom.teacher %>
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <b>Capacidade: </b> <%= classroom.capacity %>
                        </td>
                        <td>
                          <b>Quantidades alunos:</b> <%= classroom.count_students %>
                        </td>
                        <td>
                          <b>Vaga:</b> <%= classroom.vacancy %><br/>
                        </td>
                      </tr>
                      <tr>
                        <td colspan='2'>
                          <b>Dia da Semana:</b> <%= classroom.day_week_humanize %><br>
                        </td>
                        <td>
                          <b>Horário</b><%= classroom.time_start.try(:strftime, '%H:%M') %> às <%= classroom.time_end.try(:strftime, '%H:%M') %><br>
                        </td>
                      </tr>
                      <tr>
                        <td colspan='2'>
                          <b>Aprovados: </b><%= classroom.groups.re_enrollment.approved.count %>
                        </td>
                        <td>
                          <b>Reprovados: </b> <%= classroom.groups.re_enrollment.failed.count %>
                        </td>
                      </tr>
                    </table>
                  </div>

                </td>
              </tr>
            <% end %>
          <% else %>
          <tr>
            <td colspan='2'>Nenhum registro foi encontrado.</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <table class="table table-striped table-hover table-bordered">
      <tr>
        <td>
          <b>Quantidade de turmas:</b>
        </td>
        <td>
           <%= @classrooms.count %>
        </td>
      </tr>
    </table>
  </div>

  <div class="tab-pane" id="classrooms_closed">
    <div id='div_color'>
      <table id="ulItens" class="table table-striped table-hover table-bordered">
        <colgroup>
          <col>
          <col width="160">
        </colgroup>
        <thead>
          <tr>
            <th>Selecione a turma para ver mais detalhes</th>
          </tr>
        </thead>
        <tbody>
          <% if @classrooms_closed.any? %>
            <% @classrooms_closed.sort_by(&:name).each do |classroom| %>
              <tr>
                <td>
                  <div class="alert alert-success">
                   <h4> <%=  link_to "#{classroom}", classroom, title: 'Ver detalhes' %></h4><br>
                    <table class="table table-striped table-hover table-bordered">
                      <tr>
                        <td colspan='3'>
                          <b>Professor: </b> <%= classroom.teacher %>
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <b>Capacidade: </b> <%= classroom.capacity %>
                        </td>
                        <td>
                          <b>Quantidades alunos:</b> <%= classroom.count_students %>
                        </td>
                        <td>
                          <b>Vaga:</b> <%= classroom.vacancy %><br/>
                        </td>
                      </tr>
                      <tr>
                        <td colspan='2'>
                          <b>Dia da Semana:</b> <%= classroom.day_week_humanize %><br>
                        </td>
                        <td>
                          <b>Horário</b><%= classroom.time_start.try(:strftime, '%H:%M') %> às <%= classroom.time_end.try(:strftime, '%H:%M') %><br>
                        </td>
                      </tr>
                      <tr>
                        <td colspan='2'>
                          <b>Aprovados: </b><%= classroom.groups.re_enrollment.approved.count %>
                        </td>
                        <td>
                          <b>Reprovados: </b> <%= classroom.groups.re_enrollment.failed.count %>
                        </td>
                      </tr>
                    </table>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
          <tr>
            <td colspan='2'>Nenhum registro foi encontrado.</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <table class="table table-striped table-hover table-bordered">
      <tr>
        <td>
          <b>Quantidade de turmas:</b>
        </td>
        <td>
           <%= @classrooms_closed.count %>
        </td>
      </tr>
    </table>


  </div>

</div>


<br/>

