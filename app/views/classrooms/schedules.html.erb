<meta http-equiv="refresh" content="3;url=schedules.html" />
<b>Filtros</b>
<table class="table table-striped table-hover table-bordered">
  <tr>
    <% Day.to_a.each do |d| %>
      <td>
        <%= link_to "#{d.first}", schedules_for_week_day_classrooms_path(week_day: d.last, week_day_string: d.first) %>
      </td>
    <%end%>
  </tr>
</table>

<table class="table table-striped table-hover table-bordered">
  <tr>
    <td>
      <h3><%= l @head , format: :long %></h3><br/>
    </td>
    <td>
      <h2 class="text-info" ><%= @time_now.try(:strftime, '%H:%M:%S') %><h2>
    </td>
  </tr>
</table>
<hr>
<table class="table table-striped table-hover table-bordered">
  <% @classrooms.sorted.group_by(&:time_start).each do |time_start, classrooms| %>
    <% time = time_start.try(:strftime, '%H:%M').to_s.gsub(":","").to_i %>
    <% time_now = @time_now.try(:strftime, '%H:%M').to_s.gsub(":","").to_i %>
    <tr class=
    "<%if time < time_now %>
      info
    <%end%>">
      <td>
        <p class="text-success"><b><i class="icon-time"></i> <%= time_start.try(:strftime, '%H:%M') %></b></p>
      </td>
      <% classrooms.each do |c| %>
        <td>
          <%= link_to "#{c} - #{c.teacher}" , c %><br/>
            <%if time < time_now %>
            <% time_end = c.time_end.try(:strftime, '%H:%M').to_s.gsub(":","").to_i %>
            <%minutes = time_end - time_now %>
              <% if minutes > 0 %>
              <p class="text-error">Tempo restante:
                <% hours, minutes = minutes.divmod(60)%>
                <%= "#{hours}:#{minutes}"%>
              </p>
                <%= c.minutes_of_class %>
              <div class="progress progress-striped">
                <div class="bar" style="width: <%=%>%;"></div>
              </div>
              <% end %>
            <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
