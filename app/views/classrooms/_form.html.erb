<%= simple_form_for(@classroom) do |f| %>
<div class="row-fluid">
  <div class="span6"><%= f.input :name, input_html: { class: 'span6' } %></div>
</div>
<div class="row-fluid">
  <div class="span3"><%= f.input :course_id, collection: current_company.courses %></div>
  <div class="span3"><%= f.input :calendar_id, collection: current_company.calendars.open %></div>
  <div class="span3"><%= f.input :day_week, collection: Day %></div>
</div>
<div class="row-fluid">
  <div class="span3"><%= f.input :time_start, input_html: { class: 'span3' } %></div>
  <div class="span3"><%= f.input :time_end, input_html: { class: 'span3' } %></div>
</div>
<div class="row-fluid">
  <div class="span2"><%= f.input :teacher_id, collection: current_company.teachers %></div>
</div>

<div class="row-fluid">
  <div class="span3"><%= f.input :capacity, input_html: { class: 'span3' } %></div>
  <div class="span3"><%= f.input :open_for_enrollments%></div>
  <div class="span3"><%= f.input :closed%></div>
</div>
<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-success' %>
  <%= link_to 'Voltar', :back, class: 'btn' %>
</div>
<% end %>
