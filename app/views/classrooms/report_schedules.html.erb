<% total_segunda_quarta = 0  %>	
<h4 align='center'>Segunda e Quarta</h4>
<table class="table table-striped table-hover table-bordered">
   <% @classrooms_monday_wednesday.sort_by(&:time_start).group_by(&:time_start).each do |time_start, classrooms| %>
     <tr>
       <td width='6%'>
         <p class="text-success"><b><i class="icon-time"></i> <%= time_start.try(:strftime, '%H:%M') %></b></p>
       </td>
       <% classrooms.each do |c| %>
					<% total_segunda_quarta = total_segunda_quarta + c.count_students %>
         <td>
						<%if c.open_for_enrollments %>
							<div class= "alert alert-info">
						<% end %>
            <%= link_to "#{c}" , c %> (<%= c.teacher %>)<br>
	             <i title='Quantidades de alunos'class="icon-user"></i> <%= c.count_students %>
						<%if c.open_for_enrollments %>
							</div>
						<% end %>
						
         </td>
       <% end %>
     </tr>
   <% end %>
 </table>
<table class="table table-striped">
	<tr>
		<td>
			<strong>Quantidade de Alunos</strong>
		</td>
		<td>
			<%= total_segunda_quarta %>
		</td>		
	</tr>
</table>
<div style="page-break-before:always"></div>
