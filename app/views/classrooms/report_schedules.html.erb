<% total = 0  %>	
<% total_students = 0  %>	
<h4 align='center'>Segunda e Quarta</h4>
<table class="table table-striped table-hover table-bordered">
   <% @classrooms.day_week(Day::MONDAY, Day::MONDAY_AND_WEDNESDAY).sorted.group_by(&:time_start).each do |time_start, classrooms| %>
     <tr>
       <td width='6%'>
         <p class="text-success"><b><i class="icon-time"></i> <%= time_start.try(:strftime, '%H:%M') %></b></p>
       </td>
       <% classrooms.each do |c| %>
         <% count_students = c.count_students%>
         <% total_students = total_students + count_students %>

         <td>
             <%= c %>(<%= c.teacher %>)<br>
             <i title='Quantidades de alunos'class="icon-user"></i> <%= count_students %>
         </td>
       <% end %>
     </tr>
   <% end %>
 </table>
<table class="table table-striped">
	<tr>
		<td>
			<strong>Quantidade de Alunos</strong>
		</td>
		<td>
			<%= total_students %>
		</td>		
	</tr>
</table>
<% total = total + total_students  %>	
<div style="page-break-before:always"></div>

