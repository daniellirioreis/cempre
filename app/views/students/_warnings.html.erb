<table class="table table-striped table-hover table-bordered">
  <colgroup>
    <col>
    <col width="160">
  </colgroup>
  <thead>
    <tr>
      <th>Dia</th>
      <th>Descrição</th>
      <th>Ação</th>
    </tr>
  </thead>
  <tbody>
    <% if @student.warnings.any? %>
      <% @student.warnings.each do |e| %>
        <tr>
          <td width='10%'><%= e.calendar_day.to_string %></td>
          <td><%= e.description%></td>
          <td width='30%'>
					<%= link_to "Imprimir", e , class: 'btn btn-info '%>
					<%= link_to "Editar", edit_warning_path(e, student_id: e.student_id) , class: 'btn btn-primary '%>
					<%= link_to 'Deletar', e, method: :delete, data: { confirm: 'Confirma exclusão?'}, :class => "btn btn-danger" %>          
					</td>
        </tr>
      <% end %>
    <% else %>
    <tr>
      <td colspan='3'>Nenhum registro foi encontrado.</td>
    </tr>
    <% end %>
  </tbody>
</table>