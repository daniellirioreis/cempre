<table class="table table-striped table-hover table-bordered">
  <colgroup>
    <col>
    <col width="160">
  </colgroup>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ação</th>
    </tr>
  </thead>
  <tbody>
    <% if @student.borrowed_books.any? %>
      <% @student.borrowed_books.each do |e| %>
        <tr>
          <td><%= e.title %></td>
          <td><%= link_to 'Devolver', returned_rent_path(e), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    <% else %>
    <tr>
      <td colspan='3'>Nenhum registro foi encontrado.</td>
    </tr>
    <% end %>
  </tbody>
</table>