<%= simple_form_for(@questionnaire_question) do |f| %>
  <%= @questionnaire_question.question %>
  <hr>
  <div class="row-fluid">
    <div class="span3"><%= f.input :answer_id, collection: current_company.answers %></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
    <%= link_to 'Voltar', :back, :class => "btn"  %>
  </div>
<% end %>
