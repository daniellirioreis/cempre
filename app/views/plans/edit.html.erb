<%= simple_form_for(@plan) do |f| %>
  <%= hidden_field_tag :calendar_id, params[:calendar_id] %>
  <%= f.input :calendar_id, :as => "hidden"%>
  <blockquote>
    <b>Per√≠odo:</b> <%= @plan.calendar %><br>
	  <b>Curso:</b> <%= @plan%><br>
	  <b>Lingua:</b> <%= @plan.course.type_course_humanize %><br>
	  <b>Dia da Semana:</b> <%= @plan.day_week_humanize %><br>
	  <b>Quantidade turmas:</b> <%= @plan.course.classrooms.calendar_id(current_calendar.id).count %><br>
  </blockquote>
	<div class="row-fluid">
	  <div class="span6"><%= f.input :book, input_html: { class: 'span10' } %></div>
  </div>
	<div class="row-fluid">
	  <div class="span3"><%= f.input :minutes_for_class, input_html: { class: 'span3' } %></div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Voltar', :back, class: 'btn' %>
  </div>
<% end %>