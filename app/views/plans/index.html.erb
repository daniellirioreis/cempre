<%= label_tag 'txtBusca', 'Pesquisar' %>
<%= text_field_tag 'txtBusca', '', :class => 'span11', :id => 'txtBusca' %>
<div id='div_color'>
  <table  id="ulItens" class="table table-striped table-hover table-bordered">
    <colgroup>
      <col>
      <col width="160">
    </colgroup>
    <thead>
      <tr>
        <th>Selecione a cronograma para ver mais detalhes</th>
      </tr>
    </thead>
    <tbody>
      <% if @plans.any? %>
        <% @plans.each do |plan| %>
          <tr>
            <td align='center'>
                <%= link_to "#{plan}", plan, :class => "", :title => "Editar #{plan}"  %>
            </td>
          </tr>
        <% end %>
      <% else %>
      <tr>
        <td colspan='2'>Nenhum registro foi encontrado.</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="form-actions">
  <%= link_to 'Novo Cronograma', new_plan_path(calendar_id: params[:calendar_id]), :class => "btn" %>
</div>