<table class="table table-striped table-hover table-bordered">
  <colgroup>
    <col>
    <col width="160">
  </colgroup>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ação</th>
    </tr>
  </thead>
  <tbody>
    <% if @teachers.any? %>
      <% @teachers.each do |teacher| %>
        <tr>
          <td><%= teacher %></td>
          <td align='center'>
            <div class="btn-group">
              <%= link_to "Editar", edit_teacher_path(teacher), :class => "btn btn-primary", :title => "Editar #{teacher}" %>
              <%= link_to "Informações", teacher, :class => "btn btn-info" %>
              <%= link_to 'Deletar', teacher, method: :delete, data: { confirm: 'Confirma exclusão?'}, :class => "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
    <tr>
      <td colspan='2'>Nenhum registro foi encontrado.</td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="form-actions">
  <%= link_to 'Novo Professor', new_teacher_path, :class => "btn btn-success" %>
</div>