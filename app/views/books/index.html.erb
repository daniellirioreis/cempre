<%= label_tag 'txtBusca', 'Pesquisar' %>
<%= text_field_tag 'txtBusca', '', :class => 'span11', :id => 'txtBusca' %>
<div id='div_color'>
  <table id="ulItens" class="table table-striped table-hover table-bordered" id='tabela_enturmacao'>
    <colgroup>
      <col>
      <col width="160">
    </colgroup>
    <thead>
      <tr>
        <th>
          Nome
        </th>
      </tr>
    </thead>
    <tbody>
      <% if @books.any? %>
        <% @books.each do |book| %>
          <tr>
            <td>
                <%= link_to "#{book}", book, :class => "link", :title => "Editar #{book}"%>
            </td>
          </tr>
        <% end %>
      <% else %>
      <tr>
        <td colspan='2'>Nenhum registro foi encontrado.</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="form-actions">
  <%= link_to 'Novo Livro', new_book_path, class: 'btn btn-success' %>
</div>
