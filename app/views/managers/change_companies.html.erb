        <%= link_to "clique aqui para definir" , create_calendar_manager_path(current_user, company_id: c.company_id) %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4><i class="icon-home"></i><%= c %></h4>
      <% c.calendars.each do |cc|  %>
        <table class='table'>
          <tr>
            <td>
              </i><i class="icon-calendar"></i><%= cc%>
