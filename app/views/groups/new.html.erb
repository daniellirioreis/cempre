<%= simple_form_for(@group) do |f| %>

<a id='open' href="#"><h3><%=@classroom%></h3></a>
<div id='information'>
  <a id='close' href="#">x</a>
  <blockquote>
  <table class='table'>
    <tr>
      <td>
        <p>
          <strong>Nome:</strong>
          <%= link_to "#{@classroom}", @classroom %>
        </p>
      <td>
        <p>
          <strong>Curso:</strong>
          <%= @classroom.course %>
        </p>
      <td>
      </td>
    </tr>
    <tr>
      <td>
        <p>
          <strong>Escola:</strong>
          <%= @classroom.company %>
        </p>
      </td>
      <td>
        <p>
          <strong>Dia da Semana:</strong>
          <%= @classroom.day_week_humanize %>
        </p>
      </td>
    </tr>
    <tr>
      <td>
        <p>
          <strong>Hora Inicial:</strong>
          <%= @classroom.time_start.try(:strftime, '%H:%M') %>
        </p>
      </td>
      <td>
        <p>
          <strong>Hora final:</strong>
          <%= @classroom.time_end.try(:strftime, '%H:%M') %>
        </p>
      </td>
    </tr>
    <tr>
      <td>
        <p>
          <strong>Professor:</strong>
          <%= link_to "#{@classroom.teacher}", @classroom.teacher %>
        </p>
      </td>
    <tr>
  </table>
  </blockquote>
</div>


  <div class="row-fluid">
    <div class="span8">
      <%= f.input :classroom_id, :as => "hidden"%>
      <%= hidden_field_tag :classroom_id, params[:classroom_id] %>
      <%= f.input :classroom_id, :as => "hidden"%>
      <%= f.input :status, as: :hidden %>
      <%= f.input :status, as: :hidden %>
      <%= f.input :student_id, collection: current_company.students.sorted, input_html: { class: 'span10' } %>
    </div>
    <div class="span3">
      <br/>
      <%= f.button :submit, class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
  <hr/>
  <hr/>
