<%= label_tag 'txtBusca', 'Pesquisar' %>
<%= text_field_tag 'txtBusca', '', :class => 'span11', :id => 'txtBusca' %>
<div id='div_color'>
  <table  id="ulItens" class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Selecione a turma para enturmar alunos</th>
      </tr>
    </thead>
    <tbody>
      <% if @classrooms.any? %>
        <% @classrooms.each do |classroom| %>
          <tr>
            <td>
                <%= link_to "#{classroom}", new_group_path(:classroom_id => classroom.id), :class => "link"%>
            </td>
          </tr>
        <% end %>
      <% else %>
      <tr>
        <td colspan='2'>Nenhum registro foi encontrado.</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>