<%= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>

  <div class="form-inputs">
    <div class="row-fluid">
      <div class="span12">
        <%= f.input :email, :required => true, :autofocus => true, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, I18n.t("helpers.submit.devise.unlocks.create"), :class => "btn btn-primary" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
