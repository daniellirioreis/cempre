<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row-fluid">
      <div class="span12">
        <%= f.input :name, :required => true, :autofocus => true, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <%= f.input :email, :required => true, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p><%= I18n.t "context.devise.registrations.edit.unconfirmed_email", :email =>  resource.unconfirmed_email %></p>
    <% end %>

    <div class="row-fluid">
      <div class="span12">
        <%= f.input :password, :autocomplete => "off", :hint => I18n.t("simple_form.hints.devise.registrations.edit.password"),
          :required => false, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <%= f.input :password_confirmation, :required => false, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <%= f.input :current_password, :hint => I18n.t("simple_form.hints.devise.registrations.edit.current_password"),
          :required => true, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, I18n.t("helpers.submit.devise.registrations.update"), :class => "btn btn-primary"  %>
    <%= link_to I18n.t("helpers.submit.back"), :back, :class => "btn" %>
    <%= link_to I18n.t("helpers.submit.devise.registrations.destroy"), registration_path(resource_name),
      :data => { :confirm => I18n.t("helpers.confirmation.sure") }, :method => :delete, :class => "btn btn-danger pull-right" %>
  </div>
<% end %>
