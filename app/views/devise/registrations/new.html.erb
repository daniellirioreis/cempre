<%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row-fluid">
      <div class="span12">
        <%= f.input :name, :required => true, :autofocus => true, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <%= f.input :email, :required => true, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <%= f.input :password, :required => true, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <%= f.input :password_confirmation, :required => true, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.input :profile, :as => "hidden", :input_html => { :value => "user" } %>
    <%= f.button :submit, I18n.t("helpers.submit.devise.registrations.create"), :class => "btn btn-primary" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
