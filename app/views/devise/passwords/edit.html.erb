<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <div class="row-fluid">
      <div class="span12">
        <%= f.input :password, :label => User.human_attribute_name(:new_password), :required => true,
          :autofocus => true, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">
        <%= f.input :password_confirmation, :label => User.human_attribute_name(:new_password_confirmation), :required => true,
          :autofocus => true, :input_html => { :class => "span12", :maxlength => 256 } %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, I18n.t("helpers.submit.devise.passwords.update"), :class => "btn btn-primary" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
